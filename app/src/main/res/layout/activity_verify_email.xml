<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".VerifyEmail"
    android:background="@color/purple_500"
    android:orientation="vertical"
    android:padding="10dp"
    >


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/app_logo"
            android:layout_width="match_parent"
            android:transitionName="logo_tran"
            android:layout_height="150dp"
            android:src="@drawable/covid_vitals_filled"
            />

        <TextView
            android:id="@+id/verify_phone_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/roboto_slab_bold"
            android:text="Verify Email Id"
            android:transitionName="logo_text_tran"
            android:textColor="@color/white"
            android:textSize="35sp"
            android:textAlignment="center"
            android:layout_marginTop="-20dp"
            />

        <TextView
            android:id="@+id/verify_email_info_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/roboto_slab_bold"
            android:text="Click link sent to\n"
            android:transitionName="info_text_tran"
            android:textColor="@color/white"
            android:textSize="15sp"
            android:textAlignment="center"
            android:layout_marginTop="50dp"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
            android:layout_marginBottom="20dp"
            android:orientation="vertical"
            >


            <Button
                android:layout_marginTop="10sp"
                android:id="@+id/signup_btn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Signup"
                android:textColor="@color/purple_500"
                android:backgroundTint="@color/white"
                android:fontFamily="@font/roboto_slab_bold"
                android:textSize="20sp"
                android:transitionName="next_verify"
                android:paddingVertical="10sp"
                />

            <Button
                android:layout_marginTop="10sp"
                android:id="@+id/cancel_btn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="cancel"
                android:textColor="@color/white"
                android:backgroundTint="@color/red"
                android:fontFamily="@font/roboto_slab_bold"
                android:textSize="15sp"
                android:transitionName="cancel_tran"
                android:paddingVertical="10sp"
                android:layout_gravity="center"
                />

        </LinearLayout>

        <Button
            android:id="@+id/resend_email"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="10sp"
            android:backgroundTint="@color/purple_200"
            android:fontFamily="@font/roboto_slab_bold"
            android:paddingHorizontal="30dp"
            android:paddingVertical="10sp"
            android:text="Resend"
            android:textColor="@color/black_700"
            android:textSize="15sp" />

        <ProgressBar
            android:id="@+id/progress_bar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="30dp"
            android:theme="@style/ProgressTheme" />

    </LinearLayout>





</ScrollView>